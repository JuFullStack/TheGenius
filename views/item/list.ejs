<!DOCTYPE html>
<html lang="en">
  <%- include("../header"); %>

  <body>
    <%- include("../menu"); %>

    <button
      type="button"
      class="btn btn-brown lighten-3"
      onclick="location.href='/api/item/new'"
    >
      등록
    </button>
    <div class="row row-cols-1 row-cols-md-4">
      <%result.forEach(item => { %>
      <div class="col mb-4">
        <!-- Card Light -->
        <div class="card">
          <!-- Card image -->
          <div class="view overlay">
            <img
              class="card-img-top"
              src="/images/<%= item.itemid %>.svg"
              alt="존재하지 않는 아이템 이미지입니다."
            />
            <a>
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>

          <!-- Card content -->
          <div class="card-body">
            <!-- Social shares button -->
            <a class="activator waves-effect waves-light mr-4"></a>
            <!-- Title -->
            <h4 class="card-title"><%= item.itemname %></h4>
            <hr />
            <!-- Text -->
            <p class="card-text"><%= item.itemvalue %></p>
            <p class="card-text"><%= item.howgame %></p>
            <!-- Link -->
            <a
              href="/api/item/<%= item._id %>"
              class="black-text d-flex justify-content-end"
            >
              <h5>상세보기 <i class="fas fa-angle-double-right"></i></h5>
            </a>
          </div>
        </div>
        <!-- Card Light -->
      </div>
      <% }); %>
    </div>

    <%- include("../footer"); %>
  </body>
</html>
